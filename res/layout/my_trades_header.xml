<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_overall_pos_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:gravity="center"
        android:padding="4dp"
        android:text="@string/overall_positions"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/default_padding" >

        <LinearLayout
            style="@style/rounded_gray_rect_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/tv_net_pos_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="LONG 250"
                android:textColor="@color/edit_text_background_dark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_net_pos_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/net_position_title"
                android:textColor="@color/black"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            style="@style/rounded_gray_rect_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/tv_net_value_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="$50,000"
                android:textColor="@color/edit_text_background_dark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_net_value_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/net_value_title"
                android:textColor="@color/black"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            style="@style/rounded_gray_rect_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/tv_avg_price_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="$200"
                android:textColor="@color/edit_text_background_dark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_avg_price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/average_price_title"
                android:textColor="@color/black"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView style="@style/card.shadow_image" />

    <LinearLayout
        android:id="@+id/card_first_row_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/blue"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/first_column_title"
            style="@style/stock_positions_card_header_tv_style"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/txn_port_first_column" />

        <TextView
            android:id="@+id/second_column_title"
            style="@style/stock_positions_card_header_tv_style"
            android:layout_weight="0.9"
            android:gravity="center"
            android:text="@string/txn_port_second_column" />

        <TextView
            android:id="@+id/third_column_title"
            style="@style/stock_positions_card_header_tv_style"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/txn_port_third_column" />

        <TextView
            android:id="@+id/fourth_column_title"
            style="@style/stock_positions_card_header_tv_style"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="@string/txn_port_fourth_column" />
    </LinearLayout>

</LinearLayout>