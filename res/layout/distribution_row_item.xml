<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_row_item_bg"
    android:minHeight="45.0dip">
    
    <ImageView
        android:id="@+id/dist_stock_color"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:background="@drawable/stock_identifier_bg" />
    
    <TextView
        android:id="@+id/dist_first_col"
        style="@style/txn_port_card_header_tv_style"
        android:layout_weight="1.7"
        android:layout_gravity="center"
        android:gravity="left"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:text="@string/dist_card_column_1" />
    
    <TextView
        android:id="@+id/dist_second_col"
        style="@style/txn_port_card_header_tv_style"
        android:layout_weight="1.3"
        android:layout_gravity="center"
        android:gravity="center"
        android:maxLines="1"
        android:maxLength="6"
        android:text="@string/dist_card_column_2"/>
    
    <TextView
        android:id="@+id/dist_third_col"
        style="@style/txn_port_card_header_tv_style"
        android:layout_weight="1.3"
        android:layout_gravity="center"
        android:gravity="right"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="@string/dist_card_column_3" />

</LinearLayout>
	
