<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="5dp">
	
    <include layout="@layout/progress_bar_custom" />
	
    <LinearLayout
        android:id="@+id/symbol_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:gravity="left|center_horizontal"
            android:maxLines="2"
            android:text="@string/ticker_symbol"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/et_symbol"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@drawable/apptheme_edit_text_holo_dark"
            android:imeOptions="flagNoExtractUi"
            android:focusable="false"
            android:textColor="@color/white" />

        <ImageButton
            android:id="@+id/ib_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/ticker_symbol"
            style="@style/transparent_bg_style"
            android:src="@drawable/ic_action_search" />
    </LinearLayout>
    
	<ScrollView
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/symbol_layout"
	    android:layout_above="@+id/trade_buttons_layout" >
	
	    <LinearLayout
	        android:id="@+id/layout_form"
	        android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:background="@color/white">
	        
		    <LinearLayout		        
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="@color/lv_bg_color"
		        android:layout_margin="@dimen/default_margin"
		        android:padding="5dp"
		        android:orientation="vertical">
		
		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:orientation="horizontal" >
		
		            <TextView
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:layout_weight="1"
		                android:text="@string/type_trade"
		                android:textColor="@color/black" />
		
		            <TextView
		                android:id="@+id/tv_volume_title"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:layout_weight="1"
		                android:text="@string/volume_trade"
		                android:textColor="@color/black" />
		        </LinearLayout>
		
		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:orientation="horizontal"
		            android:padding="5dp" >
		
		            <org.holoeverywhere.widget.Spinner
		                android:id="@+id/spinner_trade_type"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:background="@drawable/apptheme_spinner_background_holo_light"
		                android:layout_weight="1" 
		                android:gravity="bottom"/>
		
		            <EditText
		                android:id="@+id/et_volume"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:layout_weight="1"
		                android:imeOptions="flagNoExtractUi" 
		                android:background="@drawable/apptheme_edit_text_holo_light"   
		                android:textColor="@color/black"
		                android:focusable="false" />
		        </LinearLayout>
		
		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:orientation="horizontal" >
		
		            <TextView
		                android:id="@+id/tv_price_title"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:layout_weight="1"
		                android:text="@string/price_title"
		                android:textColor="@color/black" />
		
		            <TextView
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:layout_weight="1"
		                android:text="@string/date_title"
		                android:textColor="@color/black" />
		        </LinearLayout>
		
		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:orientation="horizontal"
		            android:padding="5dp" >
		
		            <EditText
		                android:id="@+id/et_price"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:layout_weight="1"
		                android:background="@drawable/apptheme_edit_text_holo_light"   
		                android:textColor="@color/black"
		                android:imeOptions="flagNoExtractUi"
		                android:focusable="false" />
		
		            <EditText
		                android:id="@+id/et_dt"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:layout_weight="1"
		                android:background="@drawable/apptheme_edit_text_holo_light"   
		                android:textColor="@color/black"
		                android:imeOptions="flagNoExtractUi"
		                android:focusable="false" />
		        </LinearLayout>
		
		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:orientation="horizontal" >
		
		            <TextView
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:layout_weight="1"
		                android:text="@string/total_trade"
		                android:textColor="@color/black" />
		
		            <TextView
		                android:id="@+id/tv_fees_and_commission_title"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:layout_weight="1"
		                android:text="@string/fees_commissions"
		                android:textColor="@color/black" />
		        </LinearLayout>
		
		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:orientation="horizontal"
		            android:padding="5dp" >
		
		            <EditText
		                android:id="@+id/et_total"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:layout_weight="1"
		                android:background="@drawable/apptheme_edit_text_holo_light"   
		                android:textColor="@color/black"
		                android:imeOptions="flagNoExtractUi"
		                android:focusable="false" />
		
		            <EditText
		                android:id="@+id/et_frees_and_commission"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:layout_weight="1"
		                android:background="@drawable/apptheme_edit_text_holo_light"   
		                android:textColor="@color/black"
		                android:imeOptions="flagNoExtractUi"
		                android:focusable="false" />
		        </LinearLayout>
		
		        <TextView
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:text="@string/portfolio_type_title"
		            android:textColor="@color/black" />
		
		        <org.holoeverywhere.widget.Spinner
		            android:id="@+id/spinner_portfolio_type"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:background="@drawable/apptheme_spinner_background_holo_light"
		            android:padding="5dp" />
		
		        <TextView
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:text="@string/notes_trade"
		            android:textColor="@color/black" />
		
		        <EditText
		            android:id="@+id/et_notes"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:inputType="text"
		            android:background="@drawable/apptheme_edit_text_holo_light"   
		            android:textColor="@color/black"		            
		            android:padding="5dp" />
		    </LinearLayout>
		    
		    <ImageView
		        style="@style/card.shadow_image"/>
		    
		</LinearLayout>
	    	    
	</ScrollView>
		
	<LinearLayout
	    android:id="@id/trade_buttons_layout"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:orientation="horizontal" >
	
	    <org.holoeverywhere.widget.Button
	        android:id="@+id/btn_cancel"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:layout_weight="1"
	        android:drawableLeft="?attr/cancel_icon"
	        android:paddingLeft="5dp"
	        android:textAllCaps="true"
	        android:text="@string/cancel"	        
	        android:textSize="14sp"
	        android:onClick="btnOnClick" />
	
	    <org.holoeverywhere.widget.Button
	        android:id="@+id/btn_save"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:drawableLeft="?attr/save_icon"
	        android:paddingLeft="5dp"
	        android:textAllCaps="true"
	        android:text="@string/save"	        
	        android:textSize="14sp" 
	        android:onClick="btnOnClick"/>
	</LinearLayout>

</RelativeLayout>